<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--接口名称-->
<mapper namespace="com.gbq.docker.uiproject.mapper.UserContainerMapper">

    <select id="countByUserId" resultType="java.lang.Integer">
        SELECT
            count(*)
        FROM
            user_container AS c
        WHERE
            c.user_id = #{userId}
        <if test = "status != null" >
            AND c.STATUS = #{status}
        </if>
    </select>

    <select id="listContainerByUserIdAndNameAndStatus"
            resultType="com.gbq.docker.uiproject.domain.entity.UserContainer">

        SELECT * FROM user_container
        WHERE 1 = 1
        <if test="uid != null" >
            AND user_container.user_id = #{uid}
        </if>
        <if test="name != null" >
            AND user_container.name like "%"#{name}"%"
        </if>
        <if test="status != null" >
            AND user_container.status = #{status}
        </if>
    </select>
    <select id="listAllContainerIds" resultType="java.lang.String">
        select id
        from user_container
    </select>
    <select id="hasBelongSb" resultType="java.lang.Boolean">
         SELECT
            count( * )
        FROM
            `user_container` AS `c`
        WHERE
            c.id = #{containerId}
            AND c.user_id = #{userId}
    </select>
</mapper>
