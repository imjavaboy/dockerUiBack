<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--接口名称-->
<mapper namespace="com.gbq.docker.uiproject.mapper.UserContainerMapper">

    <select id="countByUserId" resultType="java.lang.Integer">
        SELECT
            count(*)
        FROM
            user_container AS c
        WHERE
            c.user_id = #{userId}
        <if test = "status != null" >
            AND c.STATUS = #{status}
        </if>
    </select>
</mapper>
